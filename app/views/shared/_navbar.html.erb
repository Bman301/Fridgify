


<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon " >
  <a href="<%= root_path %>" class="navbar-brand">
  <p class="navbar-text" style="font-family: 'Montserrat', sans-serif;color: #BDA06A; font-size: 2em">Fridgify</p></a>


  <button class="navbar-toggler" style="background-color:none" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Recipes",   cookbooks_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://avatars.githubusercontent.com/u/82251803?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
            <a href="#" data-toggle="modal" data-target="#modal" class="btn btn-info" style="background-color:#BDA06A">Login</a>
           <a href="#" data-toggle="modal" data-target="#modalUp" class="btn btn-info" style="background-color:#BDA06A">Sign up</a>

        </li>
      <% end %>
    </ul>
  </div>
</div>



  <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= render "devise/login" %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= render "devise/signUp" %>
        </div>
      </div>
    </div>
  </div>