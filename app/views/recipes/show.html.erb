
  <div class="recipe-wrapper mx-auto" style="width: 1280" >

    <div class="title-bookmark">
      <div class="r-title">
        <h1> <%= @recipe.title %> </h1>
      </div>
      <div>
      <% if !current_user.nil? %>
          <% if @recipe.cookbooks.where(user: current_user).empty?  %>
            <%= link_to recipe_cookbooks_path(@recipe.id, user_id: current_user), method: :post do %>
              <li class="tag__item" style="color:black;font-size: 35px;list-style-type:none"><i class="far fa-bookmark" ></i></li>
              <%end%>
            <% else %>
            <%= link_to cookbook_path(@recipe.cookbooks.where(user: current_user).first), method: :delete do %>
              <li class="tag__item" style="font-size: 35px;list-style-type:none"><i class="fas fa-bookmark"></i></li>
            <%end%>
            <% end %>
            <% end %>
       
      </div>
    </div>

    <div class="rating-wrapper">
      <% if !current_user.nil? %>
        <% if  Rating.where(user_id: current_user, recipe_id: @recipe.id).empty? %>
          <div class="stars-reviews width:50%">
            My rating:&nbsp; <%= simple_form_for([@recipe, @rating], html: { class: "review_form" }) do |f| %>
                            <%= f.input :rating, collection: (1..5).to_a, label: false %>
                            <% end %>
          </div>          

        <% else %>
          <p>Thanks for rating this recipe!</p>
        <% end %>
        <% else %>
          <p>Login or signup to rate this recipe</p>
        <% end %>

      <div class="align-items-bottom width:50%">
        <div id="thisrating" data-rating="<%= @recipe.rating %>"></div>
          <div class="align-items-center">
            <p>Global rating
              <select id="diplay-rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </p>
          </div>
        </div>
      </div>
    

    <div class="d-flex info-card">
      <div class="left-container">
        <div class="r-img">
          <img src="<%= @recipe.image %>" alt="image" class="width:1280; img-fluid">
        </div>
      </div>    
      <div class="right-container width: 1280">
        <h2 text-align: center">Ingredients</h2>
        <div class="r-ingredients"style="text-align: left; list-style:none ">
            <ul>
              <p>
                <% @recipe.recipe_ingredients.each do |recipe_ingredient| %> 
                
                  <li> <strong> <%=  recipe_ingredient.ingredient.name.capitalize %> :</strong> &nbsp  <%= recipe_ingredient.amount %></li>
                <% end %>
              </p>
            </ul>
        </div>

        <div class="specs-recipe">
          <div class="r-spec ">
            <i class="fas fa-clock"></i>
            <p> 
              <%= @recipe.prep_time %> 
            </p>
          </div>

          <div class="r-spec">
            <i class="fas fa-thermometer-half"></i>
            <p> 
              <%= @recipe.difficulty_level %>
            </p>
          </div>

          <div class="r-spec">
            <i class="fas fa-user"></i>
            <p> 
              <%= @recipe.serving_size %>
            </p>
          </div>
        </div>
      </div>
    </div>

        <div class="recipe-steps">
          <h2 class="123">Lets do it!</h2>
          <p> <%= @recipe.description.html_safe %> </p>
        </div>
  </div>

