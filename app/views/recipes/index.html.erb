<style>
  body {
    background-color: #F4F4F4;
  }
</style>

<div class="container-fluid mb-5">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-9 d-flex justify-content-between bg-white p-0 "
      style="background-color:white;border-radius:40px;width:100%;box-shadow: 5px 5px 15px 5px #957F58;">
      <div class="mic m-3 p-3" id="voice-recognition"><i style="color:black;font-size:30px"
          class="fas fa-microphone btn mx-3 w-100 h-100"></i></div>
      <div class="searchbar m-3 d-flex align-items-center">
        <span style="width:100%; font-size:30px"> <%= form_tag recipes_path, method: :get do %>
          <%= text_field_tag :query, '', class: "form-control rounded-pill w-100", id:"SpeechToText", placeholder: "...What's in your fridge?", style:"font-size:1.2 em;border:none" %>
      </div>
      <div class="rounded p-3 m-3">
        <%= submit_tag "Search", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container" id="advanced-search">
    <%= link_to "Advance Search", recipes_api_call_path(query: params[:query])  %>

  </div>

  <% if @recipes.count == 0 %>
  <div class="row mx-auto text-center d-flex justify-content-center">
    <br><br>
    <h3 class="text-center mt-5"><i class="fas fa-exclamation"></i><br><br>No result yet<br><br>
      Try the <a href="<%= recipes_api_call_path(query: params[:query])%>">advanced search</a> feature or enter other
      ingredients</h3>
  </div>
  <% end %>


  <div class="row mt-5">

    <% @recipes.each do |recipe| %>

    <div class="col-sm-12 col-md-6">
      <article class="postcard postcard-styling">
        <a class="postcard__img_link" href="<%=recipe_path(recipe.id)%>">
          <% if recipe.image.nil? %>
          <img class="postcard__img pr-4" src="<%= asset_path('food-404') %>" alt="Image Title" />
          <% else %>
          <img class="postcard__img pr-4" src="<%= recipe.image %>" alt="Image Title" />
          <% end %>
        </a>
        <div class="postcard_text_container" style="background-color:white" id="card-<%= recipe.id %>">
          <h1 class="postcard__title mt-4"><a href="<%=recipe_path(recipe.id)%>"
              style="color:black;text-decoration: none;"><%= recipe.title %></a></h1>
          <div class="postcard__bar"></div>
          <div class="postcard__preview-txt mb-3" style="color:grey">
            <%= strip_tags(recipe.description.truncate_words(25)) %></div><br><br>
          <ul class="postcard__tagbox mb-3">
            <li class="tag__item"><i class="fas fa-clock mr-2"></i><%= recipe.prep_time %></li>
            <li class="tag__item"><i class="fas fa-star mr-2"></i><%= recipe.rating %></li>
            <li class="tag__item"><i class="fas fa-cookie-bite mr-2"></i><%= recipe.difficulty_level %></li>

       <% if !current_user.nil? %>

                                 <% if recipe.cookbooks.where(user: current_user).empty?  %>

                                      <%= simple_form_for :cookbooks, url: recipe_cookbooks_path(recipe.id, user_id: current_user), html: { "data-id": recipe.id, class: :selectable, :'data-type' => 'json' } do |f| %>
                                           <button type="submit" class="tag__item" id="button-<%= recipe.id %>">
                                             <li style="list-style-type: none"><i class="far fa-bookmark mr-2"></i><span  style="color:white">save</span></li>
                                            </button>
                                       <%end%>

                                 <% else %>
                                     <%= simple_form_for :cookbooks, url: recipe_cookbooks_path(recipe.id, user_id: current_user), html: { "data-id": recipe.id, class: :selectable, :'data-type' => 'json' } do |f| %>
                                           <button type="submit" class="tag__item" id="button-<%= recipe.id %>">
                                             <li style="list-style-type: none"><i class="far fa-bookmark mr-2"></i><span  style="color:black">saved</span></li>
                                            </button>
                                       <%end%>

                                 <% end %>
                  <% else %>
                  <a href="#" data-toggle="modal" data-target="#modalUp">  <li class="tag__item" style="color:black"><i class="fas fa-user-plus mr-2" ></i><span style="color:white">sign up</span></li> </a>

                <%end%>

          </ul>
        </div>
      </article>
    </div>

    <% end %>
  </div>
</div>