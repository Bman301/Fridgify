
	
<style>
body {
  background-color: #F4F4F4;
}
</style>
<div class="container-fluid mb-5">
<h1> My Recipes </h1>
 <div class="row mt-5">


<% @cookbooks.each do |cookbook| %>
        <div class="col-sm-12 col-md-6">
                <article class="postcard postcard-styling">
                    <a class="postcard__img_link" href="<%=recipe_path(cookbook.recipe_id)%>">
                        <img class="postcard__img pr-4" src="<%= Recipe.find(cookbook.recipe_id).image %>" alt="Image Title" />
                    </a>
                    <div class="postcard_text_container" style="background-color:white">
                        <h1 class="postcard__title mt-4"><a href="<%=recipe_path (cookbook.recipe_id)%>" style="color:black;text-decoration: none;"><%= Recipe.find(cookbook.recipe_id).title %></a></h1>
                        <div class="postcard__bar"></div>
                        <div class="postcard__preview-txt mb-3" style="color:grey"><%= Recipe.find(cookbook.recipe_id).description.truncate_words(5).html_safe %></div><br><br>
                            <ul class="postcard__tagbox">
                                    <li class="tag__item"><i class="fas fa-clock mr-2"></i><%= Recipe.find(cookbook.recipe_id).prep_time %></li>
                                    <li class="tag__item"><i class="fas fa-star mr-2"></i><%= Recipe.find(cookbook.recipe_id).rating %> / 5</li>
                                    <li class="tag__item"><i class="fas fa-cookie-bite mr-2"></i><%= Recipe.find(cookbook.recipe_id).difficulty_level %></li>
                                            <%= link_to cookbook_path(cookbook.id), method: :delete do %>
                                        <li class="tag__item"><i class="fas fa-bookmark mr-2"></i><span style="color:white">delete</span></li>
                                    <%end%>

                            </ul>
                    </div>
                </article>
            </div>
<% end %>

</div></div>


